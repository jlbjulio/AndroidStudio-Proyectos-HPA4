<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/fondo_activity"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/tv"
        android:textSize="50sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#FFFFFF"
        android:shadowColor="#000"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="5"
        />

    <TextView
        android:id="@+id/nomcan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#fefefe"
        android:shadowColor="#000"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="5"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tiecan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="@string/tiemcan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#fefefe"
            android:shadowColor="#000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="5"
            />

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:progressDrawable="@drawable/progress"
            android:thumb="@drawable/thumb"
            android:splitTrack="false"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/durcan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="@string/durcan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#fefefe"
            android:shadowColor="#000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="5"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btnplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnplay"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#fefefe"
            android:shadowColor="#FF0000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="5"
            android:onClick="Play"
            android:backgroundTint="@color/black"
            />

        <Button
            android:id="@+id/btnpause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnpause"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#fefefe"
            android:shadowColor="#FF0000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="5"
            android:onClick="Pause"
            android:backgroundTint="@color/black"
            />

        <Button
            android:id="@+id/btnstop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnstop"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#fefefe"
            android:shadowColor="#FF0000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="5"
            android:onClick="Stop"
            android:backgroundTint="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img"
            />
    </LinearLayout>

</LinearLayout>